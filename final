        // ç²å–æŠ•è³‡é…ç½®å»ºè­°
        function getAllocation(rrLevel) {
            if (rrLevel.includes('RR1')) return { growth: '0-20%', stable: '40-60%', conservative: '30-50%' };
            if (rrLevel.includes('RR2')) return { growth: '20-40%', stable: '40-50%', conservative: '20-30%' };
            if (rrLevel.includes('RR3')) return { growth: '40-60%', stable: '30-40%', conservative: '10-20%' };
            if (rrLevel.includes('RR4')) return { growth: '60-80%', stable: '15-30%', conservative: '5-15%' };
            return { growth: '80-95%', stable: '5-15%', conservative: '0-5%' };
        }

        // ç²å–è¡Œç‚ºæé†’
        function getBehaviorTips(type, rrLevel) {
            let tips = [];
            
            if (type.startsWith('A')) {
                tips.push('è¨­å®šæœ€å¤§å›æ’¤é™åˆ¶ï¼ˆå»ºè­°25%ï¼‰');
                tips.push('å®šæœŸæª¢è¦–é¢¨éšªæš´éœ²');
            } else {
                tips.push('è€ƒæ…®é©åº¦å¢åŠ æˆé•·å‹è³‡ç”¢');
                tips.push('é¿å…éåº¦ä¿å®ˆå°è‡´é€šè†¨ä¾µè•');
            }
            
            if (type.includes('R')) {
                tips.push('å»ºç«‹æƒ…ç·’ç·©è¡æ©Ÿåˆ¶');
                tips.push('é¿å…åœ¨å¸‚å ´æ³¢å‹•æ™‚è¡å‹•æ±ºç­–');
            }
            
            if (type.includes('I')) {
                tips.push('æ­é…æ•¸æ“šåˆ†æé©—è­‰ç›´è¦º');
                tips.push('è¨˜éŒ„æ±ºç­–éç¨‹ä»¥ä¾›å›é¡§');
            }
            
            if (type.includes('T')) {
                tips.push('é¿å…éåº¦æ§åˆ¶å°è‡´å£“åŠ›');
                tips.push('é©åº¦å§”è¨—å°ˆæ¥­ç®¡ç†');
            }
            
            tips.push('æ¯å¹´è‡³å°‘ä¸€æ¬¡å…¨é¢æª¢è¦–ç­–ç•¥');
            tips.push('æ ¹æ“šç”Ÿå‘½éšæ®µèª¿æ•´é…ç½®');
            
            return tips.join(' | ');
        }

        // é‡ç½®æ¸¬è©¦
        function resetTest() {
            // æ¸…é™¤æ‰€æœ‰é¸æ“‡
            document.querySelectorAll('input[type="radio"]').forEach(input => {
                input.checked = false;
            });
            
            // é¡¯ç¤ºæ¸¬è©¦é 
            document.getElementById('testContainer').style.display = 'block';
            document.getElementById('resultContainer').style.display = 'none';
            
            // æ»¾å‹•åˆ°é ‚éƒ¨
            window.scrollTo(0, 0);
        }

