        // ç”Ÿæˆé¡Œç›®
        function generateQuestions() {
            Object.keys(questions).forEach(group => {
                const container = document.getElementById(group);
                questions[group].forEach((question, index) => {
                    const questionDiv = document.createElement('div');
                    questionDiv.className = 'question';
                    
                    questionDiv.innerHTML = `
                        <div class="question-text">${index + 1}. ${question}</div>
                        <div class="options">
                            <div class="option">
                                <input type="radio" id="${group}${index}1" name="${group}${index}" value="1">
                                <label for="${group}${index}1">1<br><small>éå¸¸ä¸åŒæ„</small></label>
                            </div>
                            <div class="option">
                                <input type="radio" id="${group}${index}2" name="${group}${index}" value="2">
                                <label for="${group}${index}2">2<br><small>ä¸åŒæ„</small></label>
                            </div>
                            <div class="option">
                                <input type="radio" id="${group}${index}3" name="${group}${index}" value="3">
                                <label for="${group}${index}3">3<br><small>æ™®é€š</small></label>
                            </div>
                            <div class="option">
                                <input type="radio" id="${group}${index}4" name="${group}${index}" value="4">
                                <label for="${group}${index}4">4<br><small>åŒæ„</small></label>
                            </div>
                            <div class="option">
                                <input type="radio" id="${group}${index}5" name="${group}${index}" value="5">
                                <label for="${group}${index}5">5<br><small>éå¸¸åŒæ„</small></label>
                            </div>
                        </div>
                    `;
                    container.appendChild(questionDiv);
                });
            });
        }

        // è¨ˆç®—çµæœ
        function calculateResults() {
            // æª¢æŸ¥æ˜¯å¦æ‰€æœ‰é¡Œç›®éƒ½å·²å›ç­”
            const allInputs = document.querySelectorAll('input[type="radio"]:checked');
            if (allInputs.length < 32) {
                alert('è«‹å®Œæˆæ‰€æœ‰é¡Œç›®å¾Œå†è¨ˆç®—çµæœï¼');
                return;
            }

            // è¨ˆç®—å„çµ„åˆ†æ•¸
            const riskScore = calculateGroupScore('groupA', 8, 32);
            const emotionRaw = calculateGroupScore('groupB', 8, 32);
            const emotionScore = 100 - (emotionRaw * 20 / 100); // åå‘ç©©å®šåº¦
            const logicScore = calculateGroupScore('groupC', 8, 32);
            const controlScore = calculateGroupScore('groupD', 8, 32);

            // è¨ˆç®—é¡å‹
            const riskType = riskScore >= 50 ? 'A' : 'C';
            const emotionType = emotionScore >= 50 ? 'S' : 'R';
            const logicType = logicScore >= 50 ? 'L' : 'I';
            const controlType = controlScore >= 50 ? 'T' : 'P';
            
            const personalityType = riskType + '-' + emotionType + '-' + logicType + '-' + controlType;
            
            // è¨ˆç®—RRç­‰ç´šï¼ˆç°¡åŒ–ç‰ˆï¼Œä¸åŒ…å«è²¡å‹™å› ç´ ï¼‰
            const rrScore = 0.5 * riskScore + 0.3 * logicScore + 0.2 * emotionScore;
            const rrLevel = getRRLevel(rrScore);
            
            // é¡¯ç¤ºçµæœ
            displayResults(
                riskScore, emotionScore, logicScore, controlScore,
                personalityType, rrLevel, rrScore
            );
        }

        // è¨ˆç®—çµ„åˆ¥åˆ†æ•¸
        function calculateGroupScore(groupName, min, max) {
            const inputs = document.querySelectorAll(`[name^="${groupName}"]:checked`);
            let total = 0;
            inputs.forEach(input => {
                total += parseInt(input.value);
            });
            return ((total - min) / (max - min)) * 100;
        }

        // ç²å–RRç­‰ç´š
        function getRRLevel(score) {
            if (score <= 20) return 'RR1 ä¿å®ˆå‹';
            if (score <= 40) return 'RR2 ç©©å¥å‹';
            if (score <= 60) return 'RR3 å¹³è¡¡å‹';
            if (score <= 80) return 'RR4 æˆé•·å‹';
            return 'RR5 ç©æ¥µå‹';
        }

        // é¡¯ç¤ºçµæœ
        function displayResults(risk, emotion, logic, control, type, rrLevel, rrScore) {
            // è¨­å®šçµæœé¡å‹
            const typeEmoji = getTypeEmoji(type);
            document.getElementById('resultType').textContent = type + ' ' + typeEmoji;
            document.getElementById('resultDesc').textContent = getTypeDescription(type);
            
            // è¨­å®šåˆ†æ•¸
            document.getElementById('riskScore').textContent = Math.round(risk);
            document.getElementById('emotionScore').textContent = Math.round(emotion);
            document.getElementById('logicScore').textContent = Math.round(logic);
            document.getElementById('controlScore').textContent = Math.round(control);
            
            // è¨­å®šRRç­‰ç´š
            document.getElementById('rrLevel').textContent = rrLevel;
            document.getElementById('rrScore').textContent = Math.round(rrScore);
            document.getElementById('rrProgress').style.width = rrScore + '%';
            
            // è¨­å®šå»ºè­°
            const allocation = getAllocation(rrLevel);
            document.getElementById('growthRange').textContent = allocation.growth;
            document.getElementById('stableRange').textContent = allocation.stable;
            document.getElementById('conservativeRange').textContent = allocation.conservative;
            
            // è¨­å®šè¡Œç‚ºæé†’
            document.getElementById('behaviorTips').textContent = getBehaviorTips(type, rrLevel);
            
            // é¡¯ç¤ºçµæœé 
            document.getElementById('testContainer').style.display = 'none';
            document.getElementById('resultContainer').style.display = 'block';
            
            // æ»¾å‹•åˆ°é ‚éƒ¨
            window.scrollTo(0, 0);
        }

        // ç²å–é¡å‹emojiå’Œæè¿°
        function getTypeEmoji(type) {
            const emojiMap = {
                'A-S-L-T': 'ğŸ¦Š',
                'A-S-L-P': 'ğŸº',
                'A-S-I-T': 'ğŸ¦',
                'A-S-I-P': 'ğŸ¯',
                'A-R-L-T': 'ğŸ†',
                'A-R-L-P': 'ğŸ¦Œ',
                'A-R-I-T': 'ğŸ…',
                'A-R-I-P': 'ğŸƒ',
                'C-S-L-T': 'ğŸ˜',
                'C-S-L-P': 'ğŸ¦’',
                'C-S-I-T': 'ğŸ¦',
                'C-S-I-P': 'ğŸ¦“',
                'C-R-L-T': 'ğŸ¢',
                'C-R-L-P': 'ğŸ‡',
                'C-R-I-T': 'ğŸ¿ï¸',
                'C-R-I-P': 'ğŸ'
            };
            return emojiMap[type] || 'ğŸ§©';
        }

